{
  "host": "http://localhost:8080",
  "port": 3000,
  "root_folder": "/<YOUR_WORKSPACE_FOLDER>/gm-live/src",
  "bind": [
    {
      "folder": "files"
    },
    {
      "uri": "/index",
      "path": "/index.html"
    },
    {
      "uri": "/resources",
      "path": "/resources"
    },
    {
      "uri": "/dist",
      "path": "/dist"
    }
  ],
  "request": {
    "timeout": 15000

  },
  "override_responses": {
  },
  "log": {
    "colors": true,
    "show_response": false,
    "show_request_info": true,
    "show_request_error": true
  }
}
